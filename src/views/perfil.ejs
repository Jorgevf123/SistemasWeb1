<%- include('partials/header') %>
    
    <link rel="stylesheet" href="css/estiloperfildef.css">

    <div class="perfil-section">
        <!-- Circular Image -->
        <div class="image-upload">
            <a href="/elegir" class="perfil-link">
                <img id="perfil-image" src="<%= user.imagen_perfil %>" alt="Foto de perfil" class="perfil-pic">
            </a>
        </div>
        
        <!-- Email input -->
        <div class="email">
            <input type="text" id="nombre" value="<%= user.nombre %>" placeholder="Nombre completo">
        </div>
    
        <!-- Options -->
        <div class="options">
            <button class="option" onclick="window.location.href='/rutina'">Rutinas</button>
            <button class="option" onclick="window.location.href='/favoritos'">Favoritos</button>
            <button class="option" onclick="window.location.href='/comunidad'">Añadir post</button>
            <button class="option" onclick="window.location.href='/terminos'">Términos y condiciones</button>
            <button class="option" onclick="window.location.href='/perfil/cerrar-sesion'">Cerrar cuenta</button>

           
        </div>
    </div>

    <script src="/js/script.js"></script>
    <script src="/js/scriptPerfil.js"></script>
    
</body>
</html>
